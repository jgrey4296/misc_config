#  --
#A Simple hard knee transfer function
# Input: np.array(), 1d,
# Threshold
# Ratio 
def hard_knee(i,t,r):
    under = np.array([x for x in i if x < t])
    over = np.array([x for x in i if x >= t])
    compressed = t + ((over - t) / R)
    return np.concatenate((under,compressed))