# -*- mode: snippet -*-
# name: replspec
# uuid: replspec
# key:  replspec
# group : doom spec
# --
;;-- repl
(defvar $1-repl-buffer "*$1*")
(defvar $1-command     "$2")
(defun +$1-mode/open-repl (&optional arg)
  (interactive "P")
  (require '$1-mode)
  (if (not (bufferp $1-repl-buffer))
      ($1-repl))
  (get-buffer-create $1-repl-buffer)
  )

(after! jg-ui-reapply-hook-ready
  (set-repl-handler! '$1-mode '+$1-mode/open-repl)
)
;;-- end repl
