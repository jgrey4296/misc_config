#!/usr/bin/env bash
# exit on various failures:
set -o errexit
set -o nounset
set -o pipefail

# Turn on debug mode if TRACE=1
if [[ "$\{TRACE-0\}" == "1" ]]; then
   set -o xtrace
fi
