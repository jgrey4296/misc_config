def main():
    graph     = nx.karate_club_graph()
    pgv_graph = nx.nx_agraph.to_agraph(graph)
    # prog=[‘neato’|’dot’|’twopi’|’circo’|’fdp’|’nop’]
    pgv_graph.layout(prog='circo')
    pgv_graph.draw("{}.png".format("test_graph"))

##-- ifmain
if __name__ == '__main__':
    main()
##-- end ifmain
