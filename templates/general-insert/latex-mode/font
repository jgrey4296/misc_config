Text display changes:
\textnormal{}         # normal text
\emph{}               # italics
\textbf{}             # bold
\textrm{}             # roman
\textsf{}             # sans serif
\texttt{}             # teletype
\textsc{}             # small caps
\uppercase{}          # large caps
\mathfrak{}           # Fraktur / fancy. Uses amsfonts or amssymb.
\mathcal{}            # Caligraphy.
\mathbb{}             # Blackboard Bold. amsfonts or amssymb
\mathbf{}             # Bold.

\tiny                 #
\footnotesize         #
\small                #
\normalsize           #
\large                #
\huge                 #

\fontencoding{T1}     # pdflatex
\fontfamily{garamond} # pdflatex
\fontseries{m}        # pdflatex
\fontshape{it}        # pdflatex
\fontsize{12}{15}     # pdflatex
\selectfont           # pdflatex

\usepackage{fontspec} # for xelatex and lualatex, allos OTF and TTF
\usepackage{xunicode} # for xelatex
\usepackage{xltextra} # for xelatex
\setmainfont{}        # for xelatex and lualatex
\setsansfont{}        # for xelatex and lualatex
\setromanfont{}
\setmonofont{}
