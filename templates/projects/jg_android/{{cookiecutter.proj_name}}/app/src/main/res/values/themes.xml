<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.TwitterBookmarker" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.SimpleText" parent="Theme.{{cookiecutter.proj_name}}">
        <item name="android:colorBackground">@color/white </item>
        <item name="android:colorForeground">@color/black</item>
        <item name="colorPrimary">@color/gameboy1</item>
        <item name="colorPrimaryVariant">@color/gameboy1</item>
        <item name="colorSecondary">@color/gameboy1</item>
        <item name="colorSecondaryVariant">@color/gameboy1</item>
        <item name="android:editTextColor">@color/gameboy1</item>
        <item name="android:toolbarStyle">@style/Theme.SimpleText</item>
    </style>

    <style name="Theme.{{cookiecutter.proj_name}}.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.{{cookiecutter.proj_name}}.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.{{cookiecutter.proj_name}}.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>
