[push]
	default = matching
[credential]
	helper = cache
[core]
	excludesfile = ~/.gitignore_global
[init]
	defaultBranch = main
	templateDir = ~/.config/jg/templates/git
[commit]
	template = ~/.config/jg/templates/files/git/commit
[hooks]
	allownonascii = false
[merge]
        branchdesc = true
	log = 20
[pretty]
# reminder: use 'format:', doesnt need to wrap in a string
# data access with %{char}
# see line 1199 of git-log man
# useful: [%aI - ISO 8601 date] [%as - short date] [%an - author] [%h - short hash]
# [%s - subject]
jgsimple = format:"!!! %h : %aI : %s "

[alias]
jglog = log --pretty=jgsimple --name-only
